---
- Infrastructure:
    - Traefik:
        icon: traefik.png
        href: https://traefik.cloud.merox.dev
        description: Reverse Proxy & SSL

    - Pi-hole:
        icon: pi-hole.png
        href: https://pihole.cloud.merox.dev/admin
        description: Network-wide Ad Blocking
        widget:
          type: pihole
          url: http://{{ tailscale_ip }}:8078
          key: {{ pihole_webpassword }}

    - Portainer:
        icon: portainer.png
        href: https://portainer.cloud.merox.dev
        description: Container Management

    - Netdata:
        icon: netdata.png
        href: https://netdata.cloud.merox.dev
        description: Real-time Monitoring
        widget:
          type: customapi
          url: http://{{ tailscale_ip }}:19999/api/v1/info
          mappings:
            - field: version
              label: Version

- Services:
    - Tailscale:
        icon: tailscale.png
        href: https://login.tailscale.com/admin/machines
        description: VPN Mesh Network

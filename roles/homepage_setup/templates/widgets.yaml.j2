# Weather Widget - Timișoara, Romania
- openmeteo:
    label: Timișoara
    latitude: 45.7489
    longitude: 21.2087
    timezone: Europe/Bucharest
    units: metric
    cache: 5
    format:
      maximumFractionDigits: 1

# Date & Time Widget - Romania
- datetime:
    text_size: xl
    format:
      dateStyle: long
      timeStyle: short
      hour12: false
      locale: ro-RO

